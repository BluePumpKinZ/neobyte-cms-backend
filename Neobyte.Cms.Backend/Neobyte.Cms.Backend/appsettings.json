{
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Yarp": "Warning"
    }
  },
  "Identity": {
    "Password": {
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireNonAlphanumeric": true,
      "RequiredLength": 8
    },
    "SignIn": {
      "RequireConfirmedEmail": false
    },
    "User": {
      "RequireUniqueEmail": true
    },
    "Jwt": {
      "Issuer": "Neobyte CMS",
      "Audience": "Neobyte CMS"
    }
  },
  "Mailing": {
    "SenderAddress": "no-reply@hellapagos.be", // no-reply@cms.neobyte.net
    "SenderName": "Neobyte CMS"
  },
  "Monitoring": {
    "ServiceName": "Neobyte.CMS.Backend",
    "Dashboard": {
      "Cluster": "dashboard-cluster"
    },
    "Frontend": {
      "Cluster": "frontend-tracing-cluster"
    },
    "Grafana": {
      "Cluster": "grafana-cluster"
    }
  },
  "RemoteHosting": {
    "ConnectionTimeout": 60
  },
  "Transformers": {
    "Html": {
      "CmsStylesPath": "cms_styles.css"
    } 
  }
}
